@model AppNt.Models.Vote

@{
    ViewData["Title"] = "Create";
}

<h1>Vota a tu hinchada favorita</h1>

<h4>Elegí el equipo que quieras y votalo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="TeamId" class="control-label"></label>
                <select asp-for="TeamId" class ="form-control" asp-items="ViewBag.TeamId"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label"> 
                    <input class="form-check-input" asp-for="valueVote" checked disabled /> @Html.DisplayNameFor(model => model.valueVote)
                </label>
            </div>
            <div class="form-group">
                <button class="button-28" type="submit">Confirmar Voto</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Confederation" asp-action="IndexForUsers"><button class="button-28" role="button"> Volver a Confederaciones</button></a>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
